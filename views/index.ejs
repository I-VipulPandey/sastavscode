<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
  <link rel="stylesheet" href="../stylesheets/style.css">
  <title>Document</title>
</head>

<body>

  <div id="main">


    <div class="section">
      <div class="notify">
        <div class="head">
         <a href="/">satsa vs code</a> 

        </div>

        <div class="icons">

          <i id="add-file" class="ri-add-line"></i>

          <i id="add-folder" class="ri-folder-add-fill"></i>

          <a href="/"><i class="ri-refresh-fill"></i></a>
        </div>

      </div>

      <div class="file-input">
        <form action="/filecreate">
          <input type="text " name="filename" placeholder="File name">
        </form>
      </div>

      <div class="folder-input">
        <form action="/foldercreate">
          <input type="text " name="foldername" placeholder="Folder name">
        </form>
      </div>

      <div class="files">

        <% data.forEach(function(elem){ %>


          <div class="file">
            <div class="logo">
              <% if(elem.isFolder){ %>
                <i class="ri-folder-3-fill"></i>
                <%= elem.name %>

                  <% } else{ %>

                    <i class="ri-file-line"></i>
                    <a href="/file/<%=elem.name %>">
                      <%= elem.name %>
                    </a>

                    <% } %>

            </div>

            <a href="/delete/<%= elem.name %>"><i class="ri-close-line"></i></a>

          </div>

          <% })%>


      </div>

    </div>


    <div class="nav-txt">

      <% if(filename.length>0){ %>

        <div class="nav-bar">

          <div class="files">
            <div class="file">
              <%= filename %>
                <a href="/"><i class="ri-close-line"></i></a>
            </div>
          </div> 
        </div> 
        <form action="/save/<%=filename%>" method="post" >

          <input id="btn" type="submit" value="save">
          <div id="text-area">
            <textarea name="filedata" id="txt-area">
                 <%= filedata %>
          </textarea> 
          </div>
        </form>
        
        
     <% } else { %>
        
        <h4>No Files Opened</h4>
        
        <% } %>

          
    </div>


  </div>














  <script src="../javascripts/script.js"></script>
</body>

</html>